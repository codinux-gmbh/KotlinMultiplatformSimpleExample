<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/txtvwFaviconSize"
              android:layout_width="@dimen/list_item_favicon_size_view_width" android:layout_height="match_parent"
    />

    <TextView android:id="@+id/txtvwFaviconType"
              android:layout_width="@dimen/list_item_favicon_favicon_type_view_width" android:layout_height="match_parent"
    />

    <ImageView android:id="@+id/imgvwFavicon"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
    />

</LinearLayout>