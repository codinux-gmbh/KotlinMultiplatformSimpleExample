<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:minHeight="@dimen/list_item_favicon_min_height">

    <TextView android:id="@+id/txtvwFaviconSize"
              android:layout_width="@dimen/list_item_favicon_size_view_width" android:layout_height="match_parent"
              android:gravity="center_vertical"
    />

    <TextView android:id="@+id/txtvwFaviconType"
              android:layout_width="@dimen/list_item_favicon_favicon_type_view_width" android:layout_height="match_parent"
              android:layout_marginRight="@dimen/list_item_favicon_favicon_type_margin_right" android:layout_marginEnd="@dimen/list_item_favicon_favicon_type_margin_right"
              android:gravity="center_vertical"
    />

    <ImageView android:id="@+id/imgvwFavicon"
               android:layout_width="0dp" android:layout_height="wrap_content"
               android:layout_weight="100"
               android:layout_gravity="center"
    />

</LinearLayout>